{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name":"myclient",
            "image" : "ramkumarsingh/udemycomplexdocker-client",
            "hostname": "client",
            "essential": false,
            "memory":256
        },
        {
            "name":"mynginx",
            "image" : "ramkumarsingh/udemycomplexdocker-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory":256,
            "portMappings" : [
                {
                    "hostPort":80,
                    "ContainerPort":80
                }
            ],
            "links":["myclient", "myserver"]

        },
        {
            "name":"myserver",
            "image" : "ramkumarsingh/udemycomplexdocker-server",
            "hostname": "api",
            "essential": false,
            "memory":256
        },
        {
            "name":"myworker",
            "image" : "ramkumarsingh/udemycomplexdocker-worker",
            "hostname": "worker",
            "essential": false,
            "memory":256
        }

    ]
}

