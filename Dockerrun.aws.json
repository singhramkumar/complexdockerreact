{
    "AWSEBDockerrunVersion":2,
    "ContainerDefinitions":[
        {
            "name":"myebsclient",
            "image" : "ramkumarsingh/udemycomplexdocker-client",
            "hostname": "client",
            "essential": false,
            "memory":256
        },
        {
            "name":"myebsnginx",
            "image" : "ramkumarsingh/udemycomplexdocker-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory":256,
            "portMappings" : [
                {
                    "hostPort":80,
                    "ContainerPort":80
                }
            ],
            "links":["myebsclient", "myebsserver"]

        },
        {
            "name":"myebsserver",
            "image" : "ramkumarsingh/udemycomplexdocker-server",
            "hostname": "api",
            "essential": false,
            "memory":256
        },
        {
            "name":"myebsworker",
            "image" : "ramkumarsingh/udemycomplexdocker-worker",
            "hostname": "worker",
            "essential": false,
            "memory":256
        }

    ]
}

